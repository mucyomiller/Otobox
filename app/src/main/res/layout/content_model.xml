<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rw.sd.otobox.ModelActivity"
    tools:showIn="@layout/activity_model">
    <LinearLayout
        android:id="@+id/model_header"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/brand_logo"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            />
        <View android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/brand_title"
                android:textSize="24sp"
                android:text="Audi"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
            <TextView
                android:id="@+id/models_count"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="count"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_model"
        android:layout_below="@+id/model_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>
